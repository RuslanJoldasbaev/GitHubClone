<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17181c"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/explore_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Explore"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/discover_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Discover"
            android:textColor="@color/white"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explore_text" />

        <LinearLayout
            android:id="@+id/linear_exp_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#17181c"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/discover_text">

            <ImageView
                android:id="@+id/img_home_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/backgound7_drawable"
                android:padding="8dp"
                android:src="@drawable/gas"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/text_home_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Trending Repositories"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_exp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#17181c"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/linear_exp_1">

            <ImageView
                android:id="@+id/img_home_item_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/backgound8_drawable"
                android:padding="8dp"
                android:src="@drawable/smile"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/text_home_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Awesome Lists"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_exp"
        app:layout_constraintTop_toBottomOf="@id/const_exp" />

</androidx.constraintlayout.widget.ConstraintLayout>