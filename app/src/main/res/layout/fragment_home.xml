<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_home_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#17181c"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/search"
                    app:layout_constraintBottom_toBottomOf="@id/home_text"
                    app:layout_constraintEnd_toStartOf="@id/circle_plus"
                    app:layout_constraintTop_toTopOf="@id/home_text"
                    app:tint="#5070c3" />

                <ImageView
                    android:id="@+id/circle_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/circle_plus"
                    app:layout_constraintBottom_toBottomOf="@id/home_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/home_text"
                    app:tint="#5070c3" />

                <TextView
                    android:id="@+id/my_work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="10dp"
                    android:text="My Work"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_text" />

                <LinearLayout
                    android:id="@+id/linear_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#17181c"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/my_work_text">

                    <ImageView
                        android:id="@+id/img_home_item"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/backgound1_drawable"
                        android:padding="8dp"
                        android:src="@drawable/dot"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_home_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Issues"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#17181c"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_1">

                    <ImageView
                        android:id="@+id/img_home_item_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/backgound2_drawable"
                        android:padding="8dp"
                        android:src="@drawable/pull"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_home_item_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Pull Requests"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#17181c"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_2">

                    <ImageView
                        android:id="@+id/img_home_item_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/backgound3_drawable"
                        android:padding="8dp"
                        android:src="@drawable/chat"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_home_item_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Discussions"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#17181c"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_3">

                    <ImageView
                        android:id="@+id/img_home_item_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/backgound4_drawable"
                        android:padding="8dp"
                        android:src="@drawable/book"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_home_item_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Repositories"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#17181c"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_4">

                    <ImageView
                        android:id="@+id/img_home_item_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/backgound5_drawable"
                        android:padding="8dp"
                        android:src="@drawable/office"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_home_item_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Organizations"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#17181c"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_5">

                    <ImageView
                        android:id="@+id/img_home_item_6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/backgound6_drawable"
                        android:padding="8dp"
                        android:src="@drawable/starred"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/text_home_item_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Starred"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_home_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="#17181c"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_home_1">

                <TextView
                    android:id="@+id/favorites_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Favorites"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/favorites_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Add favorite repositories for quick access at any time, without having to search"
                    android:textAlignment="center"
                    android:textColor="#b5b6bb"
                    android:textSize="19dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/favorites_text" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fav_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#201f24"
                    android:paddingVertical="12dp"
                    android:text="Add Favorites"
                    android:textColor="#0e6fd6"
                    android:textStyle="bold"
                    app:cornerRadius="4dp"
                    app:layout_constraintTop_toBottomOf="@id/favorites_text_2" />

                <TextView
                    android:id="@+id/shortcuts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="40dp"
                    android:text="Shortcuts"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fav_button" />

                <ImageView
                    android:id="@+id/shortcuts_img"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/shortcuts_img"
                    app:layout_constraintTop_toBottomOf="@id/shortcuts_text" />

                <TextView
                    android:id="@+id/shortcuts_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="10dp"
                    android:text="The things you need, one tap away"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shortcuts_img" />

                <TextView
                    android:id="@+id/shortcuts_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Fast acces your lists of Issues, Pull Requests, or Discussions"
                    android:textAlignment="center"
                    android:textColor="#b5b6bb"
                    android:textSize="19dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shortcuts_text_1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shortcuts_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#201f24"
                    android:paddingVertical="12dp"
                    android:text="Get Started"
                    android:textColor="#0e6fd6"
                    android:textStyle="bold"
                    app:cornerRadius="4dp"
                    app:layout_constraintTop_toBottomOf="@id/shortcuts_text_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>